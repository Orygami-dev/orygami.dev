---
import BrowserMockup from './BrowserMockup.astro';
import logo from '../assets/logo.png';
---

<section class="hero">
  <a href="/" class="hero__logo">
    <img src={logo.src} alt="Orygami.dev" width="180" height="50" />
  </a>
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">
        Votre site web vitrine,
        <span class="hero__title-accent">sur-mesure</span>
      </h1>
      <p class="hero__subtitle">
        Je crée des sites web modernes et performants pour les PME qui veulent se démarquer en ligne. Design soigné, responsive et optimisé pour le référencement.
      </p>
      <div class="hero__actions">
        <a href="#contact" class="hero__cta-primary">
          Discutons de votre projet
        </a>
        <a href="#portfolio" class="hero__cta-secondary">
          Voir mes réalisations
        </a>
      </div>
    </div>
    <div class="hero__visual">
      <BrowserMockup />
    </div>
  </div>
  <a href="#services" class="hero__scroll-arrow">
    <span class="hero__scroll-label">Découvrir mon travail</span>
    <svg viewBox="0 0 24 48" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M10 2 C14 14, 15 26, 12 40" stroke-width="2.5" stroke-linecap="round" />
      <path d="M5 33 C8 38, 10 41, 12 44 C14 40, 17 37, 20 34" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="none" />
    </svg>
  </a>
</section>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 4rem;
    position: relative;
    overflow: hidden;
    background:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 39px,
        rgba(95, 179, 162, 0.07) 39px,
        rgba(95, 179, 162, 0.07) 40px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 39px,
        rgba(95, 179, 162, 0.07) 39px,
        rgba(95, 179, 162, 0.07) 40px
      ),
      linear-gradient(180deg, $background 0%, $primary-light 100%);

    &__logo {
      position: absolute;
      top: 1.5rem;
      right: 1.5rem;
      z-index: 10;

      img {
        height: 36px;
        width: auto;
      }

      @include lg {
        right: 2rem;

        img {
          height: 44px;
        }
      }
    }

    &__container {
      @include container;
      display: grid;
      grid-template-columns: 1fr;
      gap: 3rem;
      align-items: center;

      @include md {
        grid-template-columns: 1fr 1fr;
      }
    }

    &__content {
      text-align: center;

      @include lg {
        text-align: left;
      }
    }

    &__title {
      font-family: 'Caveat', cursive;
      font-weight: 700;
      font-size: 2.75rem;
      line-height: 1.3;
      margin-bottom: 1.5rem;

      @include md {
        font-size: 3.75rem;
      }

      @include lg {
        font-size: 4.5rem;
      }
    }

    &__title-accent {
      color: $primary;
      display: block;
    }

    &__subtitle {
      font-size: 1.125rem;
      color: $text-light;
      max-width: 540px;
      margin: 0 auto 2rem;

      @include lg {
        margin: 0 0 2rem;
        font-size: 1.25rem;
      }
    }

    &__actions {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;

      @include sm {
        flex-direction: row;
        justify-content: center;
      }

      @include lg {
        justify-content: flex-start;
      }
    }

    &__cta-primary {
      @include button-primary;
      width: 100%;

      @include sm {
        width: auto;
      }
    }

    &__cta-secondary {
      @include button-secondary;
      width: 100%;

      @include sm {
        width: auto;
      }
    }

    &__visual {
      display: none;
      position: relative;

      @include md {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }

    &__scroll-arrow {
      position: absolute;
      bottom: 1.5rem;
      right: 2rem;
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      color: $text;

      &:hover {
        color: $text;
      }

      svg {
        width: 24px;
        height: 48px;
        stroke: $text;
      }
    }

    &__scroll-label {
      font-family: 'Caveat', cursive;
      font-size: 1.6rem;
      color: $text;
      white-space: nowrap;
    }
  }
</style>
