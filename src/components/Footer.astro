---
import logo from '../assets/logo.png';
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__brand">
        <img src={logo.src} alt="Orygami.dev" class="footer__logo" width="120" height="auto" />
      </div>

      <div class="footer__links">
        <a href="#services">Services</a>
        <a href="#portfolio">Réalisations</a>
        <a href="#contact">Contact</a>
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {currentYear} Orygami. Tous droits réservés.
      </p>
      <div class="footer__legal">
        <a href="/mentions-legales">Mentions légales</a>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;

  .footer {
    background: $text;
    color: rgba(white, 0.7);
    padding: 3rem 0 1.5rem;

    &__container {
      @include container;
    }

    &__content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid rgba(white, 0.1);

      @include md {
        flex-direction: row;
        justify-content: space-between;
      }
    }

    &__brand {
      text-align: center;

      @include md {
        text-align: left;
      }
    }

    &__logo {
      width: 120px;
      height: auto;
      filter: brightness(0) invert(1);
    }

    &__tagline {
      font-size: 0.9rem;
      margin-top: 0.25rem;
      color: rgba(white, 0.5);
    }

    &__links {
      display: flex;
      gap: 2rem;

      a {
        color: rgba(white, 0.7);
        text-decoration: none;
        font-size: 0.95rem;
        @include transition(color);

        &:hover {
          color: white;
        }
      }
    }

    &__bottom {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding-top: 1.5rem;

      @include md {
        flex-direction: row;
        justify-content: space-between;
      }
    }

    &__copyright {
      font-size: 0.875rem;
      color: rgba(white, 0.5);
    }

    &__legal {
      a {
        font-size: 0.875rem;
        color: rgba(white, 0.5);
        text-decoration: none;
        @include transition(color);

        &:hover {
          color: rgba(white, 0.8);
        }
      }
    }
  }
</style>
